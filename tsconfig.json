{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node"
  }
}